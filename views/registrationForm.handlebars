<h2>Create an Account</h2>

<p>Or, <a href="/login">Login</a></p>

<form action="/register" method="post">
  <label for="firstName">First Name</label>
  <input type="text" class="u-full-width" id="firstName" name="firstName" value="{{firstName}}" />

  <label for="lastName">Last Name</label>
  <input type="text" class="u-full-width" id="lastName" name="lastName" value="{{lastName}}" />

  <label for="emailAddress">Email Address</label>
  <input type="text" class="u-full-width" id="emailAddress" name="emailAddress" value="{{emailAddress}}" />

  <label for="password">Password</label>
  <input type="password" class="u-full-width" id="password" name="password" />

  <button class="button-primary">Register</button>
</form>
