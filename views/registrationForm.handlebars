<h2>Create an Account</h2>

<p>Or, <a href="/user/login">login</a>.</p>

<form action="/user/register" method="post">
  <label for="firstName">First Name</label>
  <input type="text" class="u-full-width {{#err.errors.firstName}}error{{/err.errors.firstName}}" id="firstName" name="firstName" value="{{user.firstName}}" />
  <div class="fieldError">{{err.errors.firstName.message}}</div>

  <label for="lastName">Last Name</label>
  <input type="text" class="u-full-width {{#err.errors.lastName}}error{{/err.errors.lastName}}" id="lastName" name="lastName" value="{{user.lastName}}" />
  <div class="fieldError">{{err.errors.lastName.message}}</div>

  <label for="emailAddress">Email Address</label>
  <input type="text" class="u-full-width {{#err.errors.emailAddress}}error{{/err.errors.emailAddress}}" id="emailAddress" name="emailAddress" value="{{user.emailAddress}}" />
  <div class="fieldError">{{err.errors.emailAddress.message}}</div>

  <label for="password">Password</label>
  <input type="password" class="u-full-width {{#err.errors.password}}error{{/err.errors.password}}" id="password" name="password" />
  <div class="fieldError">{{err.errors.password.message}}</div>

  <button class="button-primary">Register</button>
</form>
